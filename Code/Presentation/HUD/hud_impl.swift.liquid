import Foundation
import SVProgressHUD

class HUDImpl {
    
    var styleKit: StyleKit
    
    init(style: StyleKit) {
        styleKit = style
        SVProgressHUD.setDefaultStyle(.custom)
        SVProgressHUD.setDefaultMaskType(.clear)
        SVProgressHUD.setForegroundColor(styleKit.hudForegroundColor)
        SVProgressHUD.setBackgroundColor(styleKit.hudBackgroundColor)
    }
    
}

extension HUDImpl: HUD {
    
    func show() {
        SVProgressHUD.show()
    }
    
    func hide() {
        SVProgressHUD.dismiss()
    }
    
    var isVisible: Bool {
        return SVProgressHUD.isVisible()
    }
    
}
